                  }
                }
              }
            }
          }
        },
        "operationId": "updateStudent",
        "description": "Update student profile",
        "tags": [
          "students"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "student": {
                    "$ref": "#/components/schemas/Student"
                  }
                }
              }
            }
          },
          "description": "Student"
        }
      },
      "delete": {
        "summary": "Delete student account",
        "operationId": "deleteStudent",
        "description": "Delete student account",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "students"
        ]
      }
    },
    "/students/{username}": {
      "get": {
