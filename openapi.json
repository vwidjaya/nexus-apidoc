    "/contracts": {
      "get": {
        "summary": "Get student contracts",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Contract"
                  }
                }
              }
            }
          }
        },
        "description": "Get student contracts",
        "operationId": "getStudentContracts",
